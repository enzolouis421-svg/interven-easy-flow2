// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  role          UserRole  @default(COLLABORATOR)
  companyId     String?
  company       Company?  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  
  // Relations
  emissionRecords EmissionRecord[]
  uploadedFiles   UploadedFile[]
  recommendations AIRecommendation[]
  reports         Report[]
  
  @@index([email])
  @@index([companyId])
}

model Company {
  id              String    @id @default(uuid())
  name            String
  siret           String?   @unique
  sector          String?   // BTP, industrie, transport, etc.
  address         String?
  city            String?
  postalCode      String?
  country         String    @default("France")
  phone           String?
  email           String?
  logoUrl         String?
  onboardingCompleted Boolean @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relations
  users           User[]
  projects        Project[]
  emissionRecords EmissionRecord[]
  uploadedFiles   UploadedFile[]
  recommendations AIRecommendation[]
  reports         Report[]
  settings        CompanySettings?
  
  @@index([siret])
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  companyId   String
  company     Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  address     String?
  city        String?
  postalCode  String?
  startDate   DateTime?
  endDate     DateTime?
  status      ProjectStatus @default(ACTIVE)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  emissionRecords EmissionRecord[]
  
  @@index([companyId])
}

model EmissionRecord {
  id                String    @id @default(uuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId         String
  company           Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  projectId         String?
  project           Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  
  // Données d'émission
  activityType      String    // énergie, transport, achat, matière première, etc.
  categoryId        String?
  category          ActivityCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  scope             EmissionScope
  description       String
  quantity          Float
  unit              String    // kWh, km, kg, etc.
  emissionFactor    Float     // Facteur d'émission en kg CO2e/unité
  co2e              Float     // Émissions totales en kg CO2e
  
  // Métadonnées
  source            String?   // facture, csv, manuel, etc.
  sourceFileId      String?
  sourceFile        UploadedFile? @relation(fields: [sourceFileId], references: [id], onDelete: SetNull)
  date              DateTime
  period            String?   // 2024-01, etc.
  
  // Données brutes extraites
  rawData           Json?
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  @@index([companyId])
  @@index([userId])
  @@index([date])
  @@index([scope])
  @@index([activityType])
}

model ActivityCategory {
  id            String    @id @default(uuid())
  name          String
  description   String?
  scope         EmissionScope
  activityType  String
  defaultEmissionFactor Float?
  unit          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  emissionRecords EmissionRecord[]
  
  @@unique([name, scope])
  @@index([scope])
}

model UploadedFile {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  fileName      String
  fileType      String    // pdf, image, csv, xlsx
  fileSize      Int
  storagePath   String    // Chemin dans Supabase Storage
  mimeType      String?
  
  // Statut de traitement
  status        FileStatus @default(PENDING)
  extractionStatus ExtractionStatus @default(PENDING)
  extractedData Json?     // Données extraites par l'IA
  errorMessage  String?
  
  // Métadonnées
  uploadedAt    DateTime  @default(now())
  processedAt   DateTime?
  
  // Relations
  emissionRecords EmissionRecord[]
  
  @@index([companyId])
  @@index([userId])
  @@index([status])
}

model AIRecommendation {
  id            String    @id @default(uuid())
  userId        String?
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  companyId     String
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  title         String
  description   String
  category      RecommendationCategory
  priority      RecommendationPriority @default(MEDIUM)
  impact        Float?    // Réduction estimée en kg CO2e
  cost          Float?    // Coût estimé
  effort        String?   // LOW, MEDIUM, HIGH
  status        RecommendationStatus @default(PENDING)
  
  // Données IA
  aiGenerated   Boolean   @default(true)
  aiReasoning   String?   // Explication de l'IA
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  implementedAt DateTime?
  
  @@index([companyId])
  @@index([status])
  @@index([priority])
}

model Report {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId     String
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  type          ReportType
  title         String
  period        String    // 2024-01, 2024-Q1, 2024, etc.
  startDate     DateTime
  endDate       DateTime
  
  // Fichier généré
  fileUrl       String?
  filePath      String?
  fileSize      Int?
  
  // Données du rapport
  data          Json?     // Données structurées du rapport
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([companyId])
  @@index([type])
  @@index([period])
}

model CompanySettings {
  id            String    @id @default(uuid())
  companyId     String    @unique
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Préférences
  currency      String    @default("EUR")
  language      String    @default("fr")
  timezone      String    @default("Europe/Paris")
  
  // Facteurs d'émission personnalisés
  customEmissionFactors Json?
  
  // Notifications
  emailNotifications Boolean @default(true)
  weeklyReport       Boolean @default(false)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model DemoData {
  id            String    @id @default(uuid())
  name          String
  description   String?
  data          Json      // Données de démonstration
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum UserRole {
  ADMIN
  COLLABORATOR
}

enum EmissionScope {
  SCOPE_1    // Émissions directes
  SCOPE_2    // Émissions indirectes (énergie)
  SCOPE_3    // Autres émissions indirectes
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum FileStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ExtractionStatus {
  PENDING
  EXTRACTING
  COMPLETED
  FAILED
}

enum RecommendationCategory {
  ENERGY
  TRANSPORT
  WASTE
  PROCUREMENT
  PROCESS
  OTHER
}

enum RecommendationPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum RecommendationStatus {
  PENDING
  IN_PROGRESS
  IMPLEMENTED
  REJECTED
}

enum ReportType {
  CARBON_BALANCE    // Bilan carbone
  ESG               // Rapport ESG
  CSRD              // Rapport CSRD
  MONTHLY           // Rapport mensuel
  CUSTOM            // Rapport personnalisé
}











